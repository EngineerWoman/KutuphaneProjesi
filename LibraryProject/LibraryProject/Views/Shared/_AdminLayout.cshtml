@{
    // Bu kod erişimi kısıtlıyor
    if (Session["Mail"] == null)
    {
        Response.Redirect("/Admin/Login/");
    }
}
<!DOCTYPE html>
<html style="background:#000;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title - Admin Panel</title>
    <meta name="keywords" content="" />
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/Content/Admin/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/animate/animate.css">
    <link rel="stylesheet" href="~/Content/Admin/vendor/font-awesome/css/fontawesome-all.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/jquery-ui/jquery-ui.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/jquery-ui/jquery-ui.theme.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/bootstrap-multiselect/bootstrap-multiselect.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/morris/morris.css" />
    <link rel="stylesheet" href="~/Content/Admin/css/theme.css" />
    <link rel="stylesheet" href="~/Content/Admin/css/skins/default.css" />
    <link rel="stylesheet" href="~/Content/Admin/css/custom.css">
    <script src="~/Content/Admin/vendor/modernizr/modernizr.js"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <link href="~/Content/ckeditor/contents.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />
</head>
<body style="background:#000;">
    <section class="body">

        <header class="header">
            <div class="logo-container">
                <a href="../2.1.1" class="logo">
                    <img src="~/Content/Admin/img/logo-ceylan.jpg" width="75" height="35" alt="Kurumsal Web Sitesi" />
                </a>
                <div class="d-md-none toggle-sidebar-left" data-toggle-class="sidebar-left-opened" data-target="html" data-fire-event="sidebar-left-opened">
                    <i class="fas fa-bars" aria-label="Toggle sidebar"></i>
                </div>
            </div>

            <div class="header-right">
                <span class="separator"></span>
                <div id="userbox" class="userbox">
                    <a href="#" data-toggle="dropdown">
                        <i class="fa fa-user">
                        </i>
                        <div class="profile-info" data-lock-name="" data-lock-email="info@maill.com">
                            <span class="name">@Session["Mail"]</span>
                            <span class="role">@Session["Yetki"]</span>
                        </div>
                        <i class="fa custom-caret"></i>
                    </a>

                    <div class="dropdown-menu">
                        <ul class="list-unstyled mb-2">
                            <li class="divider"></li>
                            @if (@Session["Yetki"].ToString() == "Admin")
                            {
                                <li>
                                    <a role="menuitem" tabindex="-1" href="/Admin/Users/"><i class="fas fa-user"></i>Kullanıcılar</a>
                                </li>
                            }
                            <li>
                                <a role="menuitem" tabindex="-1" href="/Admin/Login/"><i class="fas fa-power-off"></i> Çıkış</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div class="inner-wrapper">
            <aside id="sidebar-left" class="sidebar-left mt-5">
                <div class="sidebar-header">
                    <div class="sidebar-toggle d-none d-md-block" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle">
                        <i class="fas fa-bars" aria-label="Toggle sidebar"></i>
                    </div>
                </div>
                <div class="nano">
                    <div class="nano-content">
                        <nav id="menu" class="nav-main" role="navigation">
                            <ul class="nav nav-main">
                                <li class="nav-active">
                                    <a class="nav-link" href="/Istatistik/LinqKart/">
                                        <i class="fa fa-home" aria-hidden="true"></i>
                                        <span>ANASAYFA</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Kategori/Index/">
                                        <i class="fa fa-align-justify" aria-hidden="true"></i>
                                        <span>KATEGORİLER</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Kitaps/Index/">
                                        <i class="fa fa-book" aria-hidden="true"></i>
                                        <span>KİTAPLAR</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Yazar/Index/">
                                        <i class="fa fa-pencil-alt" aria-hidden="true"></i>
                                        <span>YAZARLAR</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Uye/Index/">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                        <span>ÜYELER</span>
                                    </a>
                                </li>
                                @if (@Session["Yetki"].ToString() == "Admin")
                                {
                                    <li class="nav-parent">
                                        <a class="nav-link" href="/Personel/Index/">
                                            <i class="fa fa-users" aria-hidden="true"></i>
                                            <span>PERSONELLER</span>
                                        </a>
                                    </li>
                                }

                                <li class="nav-parent">
                                    <a class="nav-link" href="/Hareket/OduncKitapVerme/">
                                        <i class="fa fa-arrow-circle-up" aria-hidden="true"></i>
                                        <span>ÖDÜNÇ KİTAP VERME</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Hareket/Index/">
                                        <i class="fa fa-arrow-circle-down" aria-hidden="true"></i>
                                        <span>ÖDÜN KİTAP İADE</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Ceza/Index/">
                                        <i class="fa fa-chart-bar" aria-hidden="true"></i>
                                        <span>CEZALAR</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Duyuru/Index/">
                                        <i class="fa fa-sticky-note" aria-hidden="true"></i>
                                        <span>DUYURULAR</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Islem/Index/">
                                        <i class="fa fa-globe" aria-hidden="true"></i>
                                        <span>İŞLEMLER</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Galeri/Index/">
                                        <i class="fa fa-image" aria-hidden="true"></i>
                                        <span>GALERİ</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Home/Index/">
                                        <i class="fa fa-gift" aria-hidden="true"></i>
                                        <span>SİTEYE GİT</span>
                                    </a>
                                </li>
                                @if (@Session["Yetki"].ToString() == "Admin")
                                {
                                    <li class="nav-parent">
                                        <a class="nav-link" href="#">
                                            <i class="fa fa-cog" aria-hidden="true"></i>
                                            <span>AYARLAR</span>
                                        </a>
                                        <ul class="nav nav-children">
                                            <li>
                                                <a class="nav-link fas fa-list-alt" href="/FirmaBilgileri/Index/">
                                                    FİRMA BİLGİLERİ
                                                </a>
                                            </li>
                                            <li>
                                                <a class="nav-link fas fa-list-alt" href="/IletisimBilgileri/Index/">
                                                    İLETİŞİM BİLGİLERİ
                                                </a>
                                            </li>
                                            <li>
                                        </ul>
                                    </li>
                                }

                                <li class="nav-parent">
                                    <a class="nav-link" href="/Iletisim/Index/">
                                        <i class="fa fa-info-circle" aria-hidden="true"></i>
                                        <span>SİTEDEN GELEN MESAJLAR</span>
                                    </a>
                                </li>
                                <li class="nav-parent">
                                    <a class="nav-link" href="/Admin/Login/">
                                        <i class="fa fa-times-circle" aria-hidden="true"></i>
                                        <span>ÇIKIŞ</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </aside>
            @RenderBody()
        </div>

    </section>
    @*<script src="~/Content/Admin/vendor/jquery/jquery.js"></script>*@
    <script src="~/Content/Admin/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/Content/Admin/vendor/popper/umd/popper.min.js"></script>
    <script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Content/Admin/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/Admin/vendor/common/common.js"></script>
    <script src="~/Content/Admin/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/Content/Admin/vendor/magnific-popup/jquery.magnific-popup.js"></script>
    <script src="~/Content/Admin/vendor/jquery-placeholder/jquery-placeholder.js"></script>
    <script src="~/Content/Admin/vendor/jquery-appear/jquery-appear.js"></script>
    <script src="~/Content/Admin/vendor/owl.carousel/owl.carousel.js"></script>
    <script src="~/Content/Admin/vendor/isotope/isotope.js"></script>
    <script src="~/Content/Admin/js/theme.js"></script>
    <script src="~/Content/Admin/js/custom.js"></script>
    <script src="~/Content/Admin/js/theme.init.js"></script>
    <script src="~/Content/Admin/js/examples/examples.landing.dashboard.js"></script>

    <script>
        // Maintain Scroll Position
        if (typeof localStorage !== 'undefined') {
            if (localStorage.getItem('sidebar-left-position') !== null) {
                var initialPosition = localStorage.getItem('sidebar-left-position'),
                    sidebarLeft = document.querySelector('#sidebar-left .nano-content');

                sidebarLeft.scrollTop = initialPosition;
            }
        }
    </script>
</body>
</html>