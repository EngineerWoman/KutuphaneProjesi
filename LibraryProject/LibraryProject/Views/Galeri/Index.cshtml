@model IEnumerable<LibraryProject.Models.Model.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>

<section role="main" class="content-body">
    <h2>SLİDER</h2>
    @*@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
        {
            <div class="col-md-8 float-right"><b>Aradoğınız Kitabı Bulun</b> @Html.TextBox("kitap")<input type="submit" value="Ara" /> </div>

        }*@
    @*<a class="btn btn-info mb-2" href="/Galeri/Create/">YENİ KAYIT</a>*@
    <table class="table table-bordered table-hover table-responsive-sm table-striped table-info" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Sira)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Resim)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Durum)
                </th>
                <th>İşlemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sira)
                    </td>
                    <td><img src="@item.Resim" width="60" height="50" /></td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Durum)
                    </td>
                    <td><a href="/Galeri/Edit/@item.SliderId"> <i class="fa fa-edit"></i>Güncelle </a> | <a href="/Galeri/Delete/@item.SliderId" onclick="return confirm('Silmek İstediğinizden Emin Misiniz')"> <i class="fa fa-trash"></i>Sil </a></td>
                </tr>
            }
        </tbody>


    </table>
</section>

