
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_OgrenciPaneli.cshtml";
}

<div class="content-wrapper">
    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">PROFİLİM</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
               
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            @using (Html.BeginForm("Index", "Panelim", FormMethod.Post))
            {
                <div class="table-responsive">
                    <table class="table m-0">
                        <thead>
                            <tr>
                                <th>Fotoğraf</th>
                                <th>Ad Soyad</th>
                                <th>Mail</th>
                                <th>Kullanıcı Adı</th>
                                <th>Şifre</th>
                                <th>Telefon</th>
                                <th>Adres</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><img src="@Session["Fotograf"].ToString()" width="100" height="70" /></td>
                                <td> @Session["AdSoyad"].ToString()</td>
                                <td> @Session["Mail"].ToString()</td>
                                <td> @Session["KullaniciAdi"].ToString()</td>
                                <td> <input type="text" class="form-control" value="@Session["Sifre"].ToString()" name="Sifre"/>@*@TempData["Sifre"].ToString()*@</td>
                                <td> @Session["Telefon"].ToString()</td>
                                <td> @Session["Adres"].ToString()</td>
                            </tr>

                        </tbody>
                    </table>
                    <button class="btn btn-warning" >Şifre Güncelle</button>
                </div>
            }
        </div>

    </div>
</div>

