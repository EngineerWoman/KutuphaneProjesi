
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <meta name="keywords" content="" />
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/Content/Admin/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/animate/animate.css">
    <link rel="stylesheet" href="~/Content/Admin/vendor/font-awesome/css/fontawesome-all.min.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/Content/Admin/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />
    <link rel="stylesheet" href="~/Content/Admin/css/theme.css" />
    <link rel="stylesheet" href="~/Content/Admin/css/skins/default.css" />
    <link rel="stylesheet" href="~/Content/Admin/css/custom.css">
    <script src="~/Content/Admin/vendor/modernizr/modernizr.js"></script>
</head>
<body>
    <div style="background-color:#333;">
        <section class="body-sign">
            <div class="center-sign">
                <a href="/" class="logo float-left">
                    <img src="~/Content/Admin/img/logo-ceylan.jpg" alt="" title="" height="119" />
                </a>
                <div class="panel card-sign">
                    <div class="card-title-sign mt-3 text-right">
                        <h2 class="title text-uppercase font-weight-bold m-0"><i class="fas fa-user mr-1"></i>Kullanıcı Girişi</h2>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Login/" method="post">
                            <p class="pb-5 alert text-danger">@ViewBag.Uyari</p>
                            <div class="form-group mb-3">

                                <label>Kullanıcı Adı</label>
                                <div class="input-group">

                                    <input name="Mail" type="text" class="form-control form-control-lg" />
                                    <span class="input-group-append">
                                        <span class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </span>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <div class="clearfix">
                                    <label class="float-left">Şifre</label>
                                </div>
                                <div class="input-group">
                                    <input name="Sifre" type="password" class="form-control form-control-lg" />
                                    <span class="input-group-append">
                                        <span class="input-group-text">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-8">
                                  
                                </div>
                                <div class="col-sm-4 text-right">
                                    <button type="submit" class="btn btn-primary mt-2">GİRİŞ</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <p class="text-center text-muted mt-3 mb-3">&copy; Tasarlayan ve Geliştiren: Yazılım Hizmetleri</p>
            </div>
        </section>
    </div>
    <script src="~/Content/Admin/vendor/jquery/jquery.js"></script>
    <script src="~/Content/Admin/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/Content/Admin/vendor/popper/umd/popper.min.js"></script>
    <script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Content/Admin/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/Admin/vendor/common/common.js"></script>
    <script src="~/Content/Admin/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/Content/Admin/vendor/magnific-popup/jquery.magnific-popup.js"></script>
    <script src="~/Content/Admin/vendor/jquery-placeholder/jquery-placeholder.js"></script>
    <script src="~/Content/Admin/js/theme.js"></script>
    <script src="~/Content/Admin/js/custom.js"></script>
    <script src="~/Content/Admin/js/theme.init.js"></script>
</body>
</html>
