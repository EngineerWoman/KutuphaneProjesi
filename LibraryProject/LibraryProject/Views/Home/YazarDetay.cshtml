@model LibraryProject.Models.Model.Yazar
@{
    ViewBag.Title = Model.YazarAdSoyad;
    Layout = "~/Views/Shared/_VitrinLayout.cshtml";
}

<main id="main">
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="/">Anasayfa</a></li>
            </ol>
            <h2>@Model.YazarAdSoyad</h2>
        </div>
    </section>
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <img src="@Model.Resim" class="img-fluid" alt="@Model.YazarAdSoyad">
                </div>
                <div class="col-lg-6 pt-4 pt-lg-0 content">
                    <h3>@Model.YazarAdSoyad</h3>
                    <p class="dark">
                        @Model.Aciklama
                    </p>
                </div>
            </div>
        </div>
    </section>
</main>

