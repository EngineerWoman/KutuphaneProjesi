
@model IEnumerable<LibraryProject.Models.Model.Slider>
@{
    Layout = null;
}


<div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>
    <div class="carousel-inner" role="listbox">
        @foreach (var item in Model)
        {
            <div class="carousel-item active" style="background-image: url(@item.Resim); background-repeat:no-repeat;">
                <div class="carousel-container">
                    <div class="carousel-content">
                        <h2 class="animated fadeInDown">@item.Baslik</h2>
                        <p class="animated fadeInUp">@item.Aciklama</p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>