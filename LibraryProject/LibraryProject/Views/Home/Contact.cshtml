@model LibraryProject.Models.Model.IletisimBilgileri
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_VitrinLayout.cshtml";
}

<main id="main">
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a href="/">Anasayfa</a></li>
            </ol>
            <h2>İletişim</h2>

        </div>
    </section>
    <section id="contact" class="contact">
        <div class="container">

            <div class="row">
                <div class="col-lg-6">
                    <div class="info-box mb-4">
                        <i class="bx bx-map"></i>
                        <h3>Adres</h3>
                        <p> @Model.Adres </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="info-box  mb-4">
                        <i class="bx bx-envelope"></i>
                        <h3>Email</h3>
                        <p>@Model.Mail</p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="info-box  mb-4">
                        <i class="bx bx-phone-call"></i>
                        <h3>Telefon</h3>
                        <p>@Model.Telefon</p>
                    </div>
                </div>

            </div>

            <div class="row">

                <div class="col-lg-6 ">
                    <iframe class="mb-4 mb-lg-0" src="@Model.Konum" frameborder="0" style="border:0; width: 100%; height: 384px;" allowfullscreen></iframe>
                </div>

                <div class="col-lg-6">
                    <form action="/Home/Contact/" method="post" role="form" class="php-email-form">
                        <div class="form-row">
                            <div class="col form-group">
                                <input type="text" name="name" class="form-control" id="AdSoyad" placeholder="Ad Soyad" required ata-msg="Lütfen Adınızı Ve Soyadınızı giriniz"  />
                                <div class="validate"></div>
                            </div>
                            <div class="col form-group">
                                <input type="email" class="form-control" name="Mail" id="email" placeholder="Email" data-rule="email" required data-msg="Lütfen mail adresinizi giriniz" />
                                <div class="validate"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Konu" id="subject" placeholder="Konu" data-rule="minlen:4" data-msg="Lütfen konuyu giriniz" required />
                            <div class="validate"></div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="Mesaj" rows="5" data-rule="required" data-msg="Lütfen mesajınızı giriniz" placeholder="Mesajınız"></textarea>
                            <div class="validate"></div>
                        </div>
                        <div class="text-center"><button type="submit">GÖNDER</button></div>
                    </form>
                </div>

            </div>

        </div>
    </section>
</main>
