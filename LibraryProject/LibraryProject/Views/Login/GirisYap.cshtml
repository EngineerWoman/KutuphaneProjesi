
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <title>GİRİŞ</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/Content/weblogin/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/Content/weblogin/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->

</head>


<body>
    <h1>ÜYE GİRİŞ PANELİ</h1>
    <div class=" w3l-login-form">
        @*<h2>Login Here</h2>*@
        <form action="/Login/GirisYap/" method="POST">
            <p class="alert-danger" style="color:red">@ViewBag.Uyari</p>
            <div class=" w3l-form-group">
                <label>EMAİL:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Email" required="required" name="Mail"/>
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>ŞİFRE:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Şifre"  name="Sifre" required="required" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Şifremi Unuttum</a>
                <p><input type="checkbox">Beni Hatırla</p>
            </div>
            <button type="submit">GİRİŞ YAP</button>
        </form>
        <p class=" w3l-register-p">Kayıt olmak için tıklayınız.<a href="/Login/KayitOl/" class="register">KAYIT OL</a></p>
    </div>
    <footer>
        <p class="agile-copyright">© @DateTime.Now.Year Tüm Hakları Saklıdır. Tasarlayan & Geliştiren Cey Yazılım<a href="#" target="_blank"></a></p>

    </footer>

</body>

</html>